#include <stdio.h>

int main() {
    float vegPrice = 54.5, fruitPrice = 135, milkPrice = 90, soapPrice = 29.45, shampooPrice = 140, meatsPrice = 75, eggsPrice= 40;
    float vegQty, fruitQty, milkQty, soapQty, shampooQty, meatsQty, eggsQty;
    float total, cash, change;
    char choice;

    do {
        printf("\nWhat do you want to purchase?:\n");
        printf("Vegetable (₱54.5/kg) = ₱55");
        scanf("%f", &vegQty);

        printf("Fruits (₱120-150/kg, avg ₱135) = ₱140");
        scanf("%f", &fruitQty);

        printf("Milk (₱90/pack) = ₱90");
        scanf("%f", &milkQty);

        printf("Soap (₱29.45/bar) = ₱30");
        scanf("%f", &soapQty);

        printf("Shampoo and Conditioner (₱140/bottle) = ₱150");
        scanf("%f", &shampooQty);
        
        total = (vegQty * vegPrice) + (fruitQty * fruitPrice) +
                (milkQty * milkPrice) + (soapQty * soapPrice) +
                (shampooQty * shampooPrice);

        printf("\nTotal purchase:₱465 ₱%.2f\n", total);

        printf("Enter your cash: ₱500");
        scanf("%f", &cash);

        if (cash >= total) {
            change = cash - total;
            printf("Your change: ₱35 ₱%.2f\n", change);
        } else {
            printf("Insufficient funds! You need ₱%.2f more.\n", total - cash);
        }

        printf("Do you want to purchase again (Y/N)? No add On's, that's all");
        scanf(" %c", &choice); // Notice the space before %c to consume newline

    } while (choice == 'Y' || choice == 'y');

    printf("Thank you for shopping and come again!\n");

    return 0;
}
